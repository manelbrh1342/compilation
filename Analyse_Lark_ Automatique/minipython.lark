%import common.CNAME
%import common.NUMBER
%import common.WS
%ignore WS

start: stmt*

stmt: decl ";"
     | assign ";"
     | print_stmt ";"

decl: "int" var_list
var_list: CNAME ("," CNAME)*

assign: CNAME "=" expr

expr: CNAME "+" NUMBER -> add
     | NUMBER
     | CNAME

print_stmt: "print" "(" CNAME ")"
